#include <arm/socfpga_cyclone5_socrates.dts>
#include "socfpga.dtsi"

/ {
	model = "EBV SoCrates";
	compatible = "ebv,socrates", "altr,socfpga";

	chosen {
		stdout-path = &uart0;
	};

	leds: gpio-leds {
	};
};

&gpio0 {
	status = "okay";
};

&gpio1 {
	status = "okay";
};

&leds {
	compatible = "gpio-leds";

	led@0 {
		label = "0";
		gpios = <&porta 28 1>;
		linux,default-trigger = "heartbeat";
	};

	led@1 {
		label = "1";
		gpios = <&portb 19 1>;
	};

	led@2 {
		label = "2";
		gpios = <&portb 25 1>;
	};
};

&qspi {
	status = "okay";

	flash: flash@0 {
		#address-cells = <1>;
		#size-cells = <1>;
		compatible = "n25q00";
		reg = <0>;
		spi-max-frequency = <100000000>;
		m25p,fast-read;
		cdns,page-size = <256>;
		cdns,block-size = <16>;
		cdns,read-delay = <4>;
		cdns,tshsl-ns = <50>;
		cdns,tsd2d-ns = <50>;
		cdns,tchsh-ns = <4>;
		cdns,tslch-ns = <4>;
	};
};
